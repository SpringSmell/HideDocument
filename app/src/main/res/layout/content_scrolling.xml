<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_scrolling">
    <com.chris.hidedocument.widgets.TitleIndicator
        android:id="@+id/tabTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:footerColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        app:footerLineHeight="0dp"
        app:footerTriangleHeight="2dp"
        app:textSizeNormal="14sp"
        app:textColor="@drawable/selector_text_color"
        app:textSizeSelected="16sp"
        />
    <com.chris.hidedocument.widgets.ViewPagerCompat
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:duplicateParentState="true"
        android:layout_height="match_parent"/>
</LinearLayout>
